<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.2.xsd" default-init-method="init" default-autowire="byName">

    <import resource="classpath:util-config.xml"/>
    <context:property-placeholder location="classpath:theatre.properties" />

    <bean id="userService" class="ua.epam.spring.hometask.service.impl.UserServiceImpl" init-method="initSpec"/>
    <bean id="eventService" class="ua.epam.spring.hometask.service.impl.EventServiceImpl"/>

    <bean id="bookingService" class="ua.epam.spring.hometask.service.impl.BookingServiceImpl"/>
    <bean id="auditoriumService" class="ua.epam.spring.hometask.service.impl.AuditoriumServiceImpl"/>

</beans>
